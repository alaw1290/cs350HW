package hw3;

public class MM1Event {
	private double lambda;
	private double tService;
	private double loggingTime;
	
	public MM1Event(double lamb, double ts, double tc, double tl){
		lambda = lamb;
		tService = ts;
	}
	
	private double expDist(double lambda){
		// Input lambda (interarrival time) to return exponentially 
		// distributed values
		double result = -1*Math.log(1-Math.random()) / lambda;
		return result;
	}
	
	public double nextMM1Birth(double currentTime){
		return currentTime + expDist(lambda);
	}
	

	public double nextMM1Death(double currentTime){
		return currentTime + expDist(tService);
	}

	public double nextMM1Log(double currentTime){
		return currentTime + expDist(loggingTime);
	}
	
}
