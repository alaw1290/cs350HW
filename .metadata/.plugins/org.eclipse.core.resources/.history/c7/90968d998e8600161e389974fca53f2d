package hw3;

public class Logger {
	private double totalTW;
	private double totalTS;
	private int totalRequests;
	private int totalW;
	private int totalQ;
	private int totalP;
	private int totalLogs;
	
	public Logger(){
		totalTW = 0;
		totalTS = 0;
		totalRequests = 0;
		totalW = 0;
		totalQ = 0;
		totalP = 0;
		totalLogs = 0;
	}
	
	public void writeLog(int w, int q, int p){
		totalLogs++;
		totalW += w;
		totalQ += q;
		totalP += p;
	}
	
	public void logRequest(double tw, double ts){
		totalRequests ++;
		totalTW += tw;
		totalTS += ts;
	}
	
	public double[] logResult(){
		
		double tw = totalTW / totalRequests;
		double ts = totalTS / totalRequests;
		double w = totalW / totalLogs;
		double q = totalQ / totalLogs;
		double p = totalP / totalLogs;
		
		return {tw,ts,w,q,p};
	}
}
